{
  "id": "io.github.sitraorg.sitra",
  "runtime": "org.gnome.Platform",
  "runtime-version": "49",
  "sdk": "org.gnome.Sdk",
  "command": "sitra",
  "finish-args": [
    "--share=network",
    "--share=ipc",
    "--socket=fallback-x11",
    "--device=dri",
    "--socket=wayland",
    "--filesystem=~/.local/share/fonts:create"
  ],
  "cleanup": [
    "/include",
    "/lib/pkgconfig",
    "/man",
    "/share/doc",
    "/share/gtk-doc",
    "/share/man",
    "/share/pkgconfig",
    "/share/vala",
    "*.la",
    "*.a"
  ],
  "modules": [
    {
      "name" : "libsitra",
      "builddir" : true,
      "buildsystem" : "meson",
      "sources" : [
        {
          "type" : "git",
          "url" : "https://github.com/sitraorg/libsitra.git",
          "tag": "v0.1.0",
          "commit": "d804cb7aa3030dc32a951b2dd2eb11aa330e2601"
        }
      ]
    },
    {
      "name": "sitra",
      "builddir": true,
      "buildsystem": "meson",
      "sources": [
        {
          "type": "dir",
          "path": "."
        }
      ],
      "config-opts": [
        "--libdir=lib"
      ]
    }
  ]
}
